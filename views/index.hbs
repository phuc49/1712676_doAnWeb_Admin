<div class="row justify-content-center">
  <div class="col-12">

    <!-- end section -->
    <div class="row">
      <div class="col-md-12 my-4">
        <h2 class="h4 mb-1">Sản phẩm</h2>
        <p class="mb-3">Quản lý thông tin chi tiết các sản phẩm</p>





        <ul class="nav">
          <li class="nav-item">

            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="">Sắp xếp
            </a>

            <!-- Dropdown list -->
            <div class="dropdown-menu">
              <a class="dropdown-item" href="?{{qs}}&orderBy=id">Mã sản phẩm</a>
              <a class="dropdown-item" href="?{{qs}}&orderBy=mostPopular">Bán chạy nhất</a>
              <a class="dropdown-item" href="?{{qs}}&orderBy=ton">Số lượng tồn thấp nhất</a>
            </div>



          </li>

        </ul>











        <div class="card shadow">
          <div class="card-body">
            <!-- table -->
            <table class="table table-hover table-borderless border-v">
              <thead class="thead-dark">
                <tr>
                  <th>Mã </th>
                  <th>Tên</th>
                  <th>Loại</th>
                  <th>Tồn</th>
                  <th>Mô tả</th>
                  <th>Giá</th>
                  <th>Giảm giá (%)</th>
                  <th>Lượt mua</th>
                  <th>Tùy chọn</th>
                </tr>
              </thead>
              <tbody>
                {{#each dssp}}
                <tr class="accordion-toggle collapsed" id="c-2474" data-toggle="collapse" data-parent="#c-2474"
                  href="#collap-2474">

                  <td>{{product_id}}</td>
                  <td>{{product_name}}</td>
                  <td>{{category_name}}</td>
                  <td>{{inventory_quantity}}</td>
                  <td>{{description}}</td>
                  <td>{{price}}</td>
                  <td>{{discount}}</td>
                  <td>{{buys}}</td>
                  <td><button class="btn btn-sm dropdown-toggle more-horizontal" type="button" data-toggle="dropdown"
                      aria-haspopup="true" aria-expanded="false">
                      <span class="text-muted sr-only">Action</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                      <a class="dropdown-item" href="/sp/{{product_id}}">Chỉnh sửa</a>
                      <a class="dropdown-item" href="/sp-xoa/{{product_id}}">Xóa</a>
                    </div>
                  </td>

                </tr>
                {{/each}}

              </tbody>
            </table>
            <nav aria-label="Table Paging" class="mb-0 text-muted">
              <ul class="pagination justify-content-center mb-0">
                <li class="page-item">
                  <a class="page-link" href="?{{qs}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                  </a>
                </li>

                {{#each pageList}}
                {{#if active}}
                <li class="page-item active"><a class="page-link" href="?{{qs}}">{{page}}</a></li>
                {{else}}
                <li class="page-item"><a class="page-link" href="?{{qs}}">{{page}}</a></li>
                {{/if}}
                {{/each}}
                <li class="page-item">
                  <a class="page-link" href="?{{lastPageQs}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div> <!-- end section -->
  </div> <!-- .col-12 -->
</div> <!-- .row -->
</div> <!-- .container-fluid -->
